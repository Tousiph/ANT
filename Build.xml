<?xml version="1.0"?>
<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="ProjANT/src/Test" destdir="build/classes"/>
    </target>

    <target name="install" depends="compile">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/Hello.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="Test.Hello"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="compile">
        <java jar="build/Hello.jar" fork="true"/>
    </target>

</project>